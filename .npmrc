# pnpm configuration tuned for React Native / Expo monorepos
# - Hoists dependencies to be visible at the project root for Metro
# - Eases peer dependency constraints common in the RN ecosystem
# - Publicly hoists core RN/Expo packages for more predictable resolution

# Make all sub-dependencies available at the project root (like npm/yarn).
# This greatly improves compatibility with Metro and other tooling that
# doesnâ€™t follow symlinks well.
shamefully-hoist=true

# Automatically install peer dependencies when possible.
auto-install-peers=true

# Relax peer dependency strictness to avoid common ecosystem mismatches.
strict-peer-dependencies=false

# Explicitly hoist frequently used RN/Expo packages so Metro can resolve them
# from the root without following deep symlink trees.
public-hoist-pattern[]=@expo/*
public-hoist-pattern[]=expo
public-hoist-pattern[]=react
public-hoist-pattern[]=react-dom
public-hoist-pattern[]=react-native
public-hoist-pattern[]=react-native-*
public-hoist-pattern[]=metro
public-hoist-pattern[]=metro-*
public-hoist-pattern[]=@react-native/*
public-hoist-pattern[]=@react-navigation/*
public-hoist-pattern[]=@expo/vector-icons
public-hoist-pattern[]=@types/react
public-hoist-pattern[]=@types/react-dom

# Keep a single lockfile for the entire monorepo.
shared-workspace-lockfile=true

# Prefer the default behavior for how pnpm imports packages into node_modules.
# Valid options: auto | hardlink | copy | clone
package-import-method=auto
