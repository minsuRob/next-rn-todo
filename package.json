{
  "name": "gamified-todo-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf node_modules",
    "supabase:login": "supabase login",
    "supabase:link": "supabase link --project-ref rkjcnlnepuoqvtwtjugl",
    "db:migrate:new": "supabase migration new",
    "db:migrate:apply": "supabase migration up",
    "db:migrate:list": "supabase migration list",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset --force",
    "db:studio": "supabase studio"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.18.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
